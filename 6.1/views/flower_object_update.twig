{% extends "__layout.twig" %}

{% block content %}
    <h1>Изменение цветов</h1>
    <hr>

    {% if message %}
        <div class="alert alert-info">
            {{ message }}
            <a href="/flower-object/{{ id }}">Открыть измененный объект</a>
        </div>
    {% endif %}

    <form action="" enctype="multipart/form-data" method="POST" class="row g-3">
        <div class="col-md-4">
            <label for="title" class="form-label">Название</label>
            <input type="text" class="form-control" name="title" id="title" value="{{ object.title ?? '' }}">
        </div>
        <div class="col-md-4">
            <label for="description" class="form-label">Краткое описание</label>
            <input type="text" class="form-control" name="description" id="description" value="{{ object.description ?? '' }}">
        </div>
        <div class="col-md-4">
            <label for="type" class="form-label">Тип</label>
            <select class="form-select" name="type" id="type">
                <option value="кустовые" {% if object.type == 'кустовые' %}selected{% endif %}>Кустовые</option>
                <option value="одиночные" {% if object.type == 'одиночные' %}selected{% endif %}>Одиночные</option>
            </select>
        </div>
        <div class="col-12 mb-3">
            <label for="formFileMultiple" class="form-label">Картинка</label>
            <input class="form-control" type="file" name="image" id="formFileMultiple" multiple>
        </div>
        <div class="col-12">
            <label for="info" class="form-label">Полное описание</label>
            <textarea name="info" id="info" placeholder="Полное описание..." class="form-control" rows="5">{{ object.info ?? '' }}</textarea>
        </div>
        <div class="col-12 text-end">
            <button type="submit" class="btn btn-primary">Обновить</button>
        </div>
    </form>
{% endblock %}
